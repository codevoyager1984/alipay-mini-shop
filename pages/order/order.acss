  margin-left: 8rpx;
}

.confirm-price .service-fee {
  font-size: 20rpx;
  color: #666;
  margin-left: 8rpx;
  font-weight: normal;
}

.confirm-btn {
  background: #ff4757;
  color: #fff;
  border: none;
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  font-weight: bold;
