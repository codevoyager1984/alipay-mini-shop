  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e8e8e8;
}

.loading-text {
  color: #999 !important;
  background: #f0f0f0 !important;
}

/* 服务协议 */
.service-agreement {
  text-align: center;
  margin-bottom: 30rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #999;
}

/* 确认弹窗底部 */
.confirm-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.confirm-price {
  display: flex;
